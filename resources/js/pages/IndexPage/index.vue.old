<script>
    import apiCall from '../../services/ApiCall.js';
    import inputGroup from '../GroupPage/input';
    import createGroup from '../GroupPage/input';
    import updateGroup from '../GroupPage/input';

    import unverifiedUser from '../GroupUserPage/unverifiedUser';

    import groupGameList from '../GroupGamePage/list.vue';
    import groupUserList from '../GroupUserPage/list.vue';

    import addGames from '../GroupGamePage/addGames.vue';

    export default {
        components: {
            inputGroup,
            createGroup,
            updateGroup,
            unverifiedUser,
            groupGameList,
            groupUserList,

            addGames,
        },

        data () {
            return {
                display: "",
                displayGroupData: "",
                displayGameData: "",
                groupIndex: -1,
                userGroups: {},
                selectedGroup: {},
                selectedGroupUser: {},
                activeItem: 'home'
            }
        },

        methods: {
            isActive (menuItem) {
                return this.activeItem === menuItem
            },
            setActive (menuItem) {
                this.activeItem = menuItem
            },

            showCreateGroup(){
                if(this.display == 'showCreateGroup'){
                    this.hide();
                }else{
                    this.hideGroupUserData();
                    this.hideGameData();
                    this.selectedGroup = {};
                    this.display = 'showCreateGroup';
                }
            },

            showGroupUsersData(){
                if(this.displayGroupData == 'showGroupUsers'){
                    this.hideGroupUserData();
                }else{
                    this.displayGroupData = 'showGroupUsers';
                }
            },

            showGameData(){
                if(this.displayGroupData == 'showGroupGames'){
                    this.hideGameData();
                }else{
                    this.displayGroupData = 'showGroupGames';
                }
            },

            //can be used for all hide option
            hide(){
                this.display = '';
            },

            hideGroupUserData(){
                this.displayGroupData = '';
            },

            hideGameData(){
                this.displayGroupData = "";
            },

            setGroup(id){
                this.selectedGroup = this.userGroups[id];
                this.groupIndex = id;
                this.display = '';
            },

            updateGroup(){
                if(this.display == 'showUpdateGroup'){
                    this.hide();
                }else{
                    this.display = 'showUpdateGroup';
                }
            },

            getGroups(){
                apiCall.getData('user-group')
                .then(response =>{
                    this.userGroups = response;
                    if(this.groupIndex >= 0){
                        this.setGroup(this.groupIndex);
                    }
                }).catch(() => {
                    console.log('handle server error from here');
                });
            },

            deleteGroup(){
                console.log(this.selectedGroup.id);
                apiCall.deleteData('group/' + this.selectedGroup.id)
                .then(response =>{
                     this.getGroups();
                     this.selectedGroup = {};
                      this.groupIndex = -1;
                }).catch(error => {
                    console.log(error);
                    console.log('handle server error from here');
                });
            }
        },

        mounted(){
            this.getGroups();
            this.$bus.$on('reloadList', () => {
                this.hide();
                this.getGroups();
            });
        }
    }
</script>

